<!DOCTYPE html>
<!-- Created By TRY Agency -->
<html lang="{{ locale }}" dir="{{ dir }}">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ title }}</title>

        <!-- Alternate Language Links -->
        <link rel="alternate" hreflang="{{locale}}" href="{{ site.baseUrl }}{{page.url}}">
        {% for link in page.url | locale_links -%}
        <link rel="alternate" hreflang="{{link.lang}}" href="{{ site.baseUrl }}{{link.url}}">
        {%- endfor %}

        <!-- Stylesheets -->
        <link rel="stylesheet" href="{{ '/assets/css/tailwind.css' | url }}">

        <!-- Scripts -->
        {% for item in scripts -%}
            <script src="/js/{{ item }}.js"></script>
        {% endfor %}
        {% for item in plugins -%}
            <script src="/js/{{ item }}.js" defer></script>
        {% endfor %}
        <script src="/js/app.js" defer></script>

        <!-- Description Meta Tag -->
        {% if desc %}
            <meta name="description" content="{{desc}}">
        {% endif %}

        <!-- Open Graph Meta Tags -->
        <meta property="og:type" content="website">
        {% if page.url %}
            <meta property="og:url" content="{{ site.baseUrl }}{{ page.url }}">
        {% endif %}
        {% if title %}
            <meta property="og:title" content="{{ title }}">
        {% endif %}
        {% if desc %}
            <meta property="og:description" content="{{ desc }}">
        {% endif %}
        {% if og_image %}
            <meta property="og:image" content="{{ og_image }}" />
        {% endif %}

        <!-- Favicon -->
        <link rel="icon" type="image/svg+xml" href="/ajincodew.svg" />

        <!-- Additional External Scripts -->
        <script src="https://kit.fontawesome.com/0e1c2ad640.js" crossorigin="anonymous"></script>

        <!-- Apple Touch Icon -->
        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png?v=1">

        <!-- Favicon Sizes for Browsers -->
        <link rel="icon" type="image/png" sizes="32x32" href="/ajincodew.png?v=1">
        <link rel="icon" type="image/png" sizes="16x16" href="/ajincodew.png?v=1">

        <!-- Safari Pinned Tab Icon -->
        <link rel="mask-icon" href="/safari-pinned-tab.svg?v=1" color="#5bbad5">

        <!-- Alternate Favicon -->
        <link rel="alternate icon" sizes="16x16" href="/ajincodew.ico?v=1">

        <!-- MS Application Tile Color -->
        <meta name="msapplication-TileColor" content="#da532c">

        <!-- Theme Color -->
        <meta name="theme-color" content="#ffffff">
        </script>
    </head>
    <body class="font-inter antialiased bg-white text-base-900 tracking-tight flex flex-col min-h-screen">
