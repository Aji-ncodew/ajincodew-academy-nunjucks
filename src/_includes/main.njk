                    <li class="mr-4">
                    <a href="/ar/aboutus" class="text-base-700 px-4 py-2 rounded-md transition duration-300 ease-in-out hover:bg-[#0fb579] hover:text-white">من نحن</a>
                    </li>
                </ul>
                </div>
            </div>
            </div>
        </div>
        </nav>

        <noscript>
            <div class="text-center fixed top-0 z-40 p-[10px] bg-green-600 text-white w-full mb-[15px]">
                {{ "nojs" | i18n }}
            </div>
        </noscript>
        {{ content | safe }}
        {% jsx "Footer" %}
    </body>
</html>
