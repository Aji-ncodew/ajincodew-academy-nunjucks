                } else {
                    noTrainingsDiv.classList.add('hidden');
                }
            });
        });

        // Wait until the DOM is fully loaded
        document.addEventListener("DOMContentLoaded", function() {
            const searchInput = document.getElementById("searchInput");
            const trainingCards = document.querySelectorAll(".training-card");

            searchInput.addEventListener("input", function() {
                const query = searchInput.value.toLowerCase();

                // Loop through each training card
                trainingCards.forEach(card => {
                    const title = card.querySelector("p.text-2xl").textContent.toLowerCase();
                    const description = card.querySelector("p.mb-4").textContent.toLowerCase();

                    // Show the card if the title or description contains the search query
                    if (title.includes(query) || description.includes(query)) {
                        card.style.display = "block";
                    } else {
                        card.style.display = "none";
                    }
                });
            });
        });
    </script>
