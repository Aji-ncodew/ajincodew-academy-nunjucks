        document.querySelectorAll('.filter-btn').forEach(btn => {
    btn.addEventListener('click', () => {
        const filter = btn.getAttribute('data-filter');
        let matchCount = 0;

        // Check if the button already has the 'active' class
        const isActive = btn.classList.contains('active');

        // If the button is active, remove the filter and reset its style
        if (isActive) {
            btn.classList.remove('active');
            btn.style.boxShadow = ''; // Remove shadow when unclicking the button
            btn.style.backgroundColor=''
            btn.style.color='black'
        } else {
            // Add the 'active' class and apply a border shadow
            btn.classList.add('active');
            btn.style.boxShadow = '0 4px 8px rgba(0, 0, 0, 0.2)'; // Add border shadow on active state
            btn.style.backgroundColor="rgb(15, 181, 121)"
            btn.style.color='white'
        }

        // Get all the active filters
        const activeFilters = Array.from(document.querySelectorAll('.filter-btn.active')).map(button => button.getAttribute('data-filter'));

        // Update the training cards based on the active filters
        document.querySelectorAll('.training-card').forEach(card => {
            const tags = card.getAttribute('data-tags');
            const shouldDisplay = activeFilters.length === 0 || activeFilters.some(filter => tags.includes(filter));
            if (shouldDisplay) {
                card.style.display = 'block';
                matchCount++; // count matching training
            } else {
                card.style.display = 'none';
            }
        });

        // Show or hide the 'no-trainings' div based on matchCount
        const noTrainingsDiv = document.getElementById('no-trainings');
        if (matchCount === 0) {
            noTrainingsDiv.classList.remove('hidden'); // Make it visible
        } else {
            noTrainingsDiv.classList.add('hidden'); // Hide it
        }
    });
});

