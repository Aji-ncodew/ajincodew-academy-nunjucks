                function zoomIn() {
                    scale += 0.2;
                    updateTransform();
                }

                function zoomOut() {
                    scale = Math.max(1, scale - 0.2); // Prevents zooming out too much
                    updateTransform();
                }

                function updateTransform() {
                    // Apply both zoom (scale) and translation (panning) to the image
                    zoomableWrapper.style.transform = `scale(${scale}) translate(${currentX}px, ${currentY}px)`;
                }

                zoomableWrapper.addEventListener("mousedown", (e) => {
                    isDragging = true;
                    startX = e.clientX - currentX;
                    startY = e.clientY - currentY;
                    zoomableWrapper.style.cursor = "grabbing";
                });

                document.addEventListener("mousemove", (e) => {
                    if (!isDragging) return;
                    currentX = e.clientX - startX;
                    currentY = e.clientY - startY;
                    updateTransform();
